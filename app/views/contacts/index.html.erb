<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%=link_to "Dashboard", root_path %></a></li>
      <li class="active">Contacts</li>
    </ol>
  </div>
</div>

<%if notice %>
  <div class="alert alert-info" id="notice">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <span class="glyphicon glyphicon-info-sign"></span> <%= notice %>
  </div>
<%end%>

<div class="row header-list">
  <div class="col-md-10 col-sm-9">
    <h1>Contacts</h1>
  </div>
  <div class="col-md-2 col-sm-3 v-align">
  </div>
</div>

<br>

<div class="table-responsive">
  <table class="table table-hover list">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Key</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
<% @contacts.each do |contact| %>
        <tr data-link="<%= contact_path(contact) %>">
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td><%= contact.key %></td>
          <td class="buttons">
            <%= link_to contact_path(contact), class: 'btn btn-sm btn-primary' do %>
              <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            <%end%>
            <%= link_to contact_path(contact), method: :delete, data: {confirm: "Are you sure you want to delete this data?"}, class: "btn btn-sm btn-primary" do%>
              <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <%end%>
          </td>
        </tr>
<% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-md-12">
    <nav class="text-center">
      <%= will_paginate @contacts, renderer: BootstrapPagination::Rails %>
    </nav>
  </div>
</div>

